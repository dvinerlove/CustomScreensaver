<Window
    x:Class="CustomScreensaver.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:CustomScreensaver.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    Cursor="Wait"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    FontFamily="Fonts/#Yeseva One"
    IsEnabled="False"
    MouseDown="Grid_MouseDown"
    Opacity="1"
    ResizeMode="NoResize"
    Topmost="True"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <views:ScreensaverView DataContext="{Binding}" FontFamily="Fonts/#Yeseva One" x:Name="ScreensaverView" />
</Window>
